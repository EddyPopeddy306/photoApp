<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <TextView
                android:id="@+id/photoTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/enter_picture_name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/photo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/photoTitleView"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="@string/hint_picture_name"
                android:hint="@string/hint_picture_name"
                android:inputType="textCapSentences" />

            <Button
                android:id="@+id/saveButtonImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/photo_name"
                android:layout_marginTop="32dp"
                android:background="@android:color/holo_orange_dark"
                android:text="@string/save_button"
                android:textColor="#000000" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>